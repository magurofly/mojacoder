{
    "Comment": "A state machine for code testing.",
    "StartAt": "Endpoint",
    "States": {
        "Endpoint": {
            "Type": "Task",
            "Resource": "${CodeTestingEndpointFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 15,
                    "MaxAttempts": 5,
                    "BackoffRate": 1.5
                }
            ],
            "Next": "CodeRunner"
        },
        "CodeRunner": {
            "Type": "Task",
            "Resource": "${CodeRunnerFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 15,
                    "MaxAttempts": 5,
                    "BackoffRate": 1.5
                }
            ],
            "Next": "Result"
        },
        "Result": {
            "Type": "Task",
            "Resource": "${CodeTestingResultFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 20,
                    "MaxAttempts": 5,
                    "BackoffRate": 10
                }
            ],
            "End": true
        }
    }
}